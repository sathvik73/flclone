{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/api/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/client/dist/assets/$1"
        },
        {
            "source": "/(.*)\\.(png|jpg|jpeg|gif|svg|ico)",
            "destination": "/client/dist/$1.$2"
        },
        {
            "source": "/(.*)",
            "destination": "/client/dist/index.html"
        }
    ]
}